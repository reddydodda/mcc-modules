{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "install_multipath": {
      "type": "boolean",
      "description": "Whether to install multipath tools"
    },
    "multipath_conf": {
      "type": "object",
      "description": "Configuration options for multipath.conf",
      "properties": {
        "defaults": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "blacklist": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "blacklist_exceptions": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "devices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "vendor": { "type": "string" },
              "product": { "type": "string" }
            },
            "required": ["vendor", "product"],
            "additionalProperties": { "type": "string" }
          }
        },
        "multipaths": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "start_service": {
      "type": "boolean",
      "description": "Whether to start and enable the multipath service"
    }
  },
  "required": ["install_multipath", "multipath_conf"],
  "additionalProperties": false
}
